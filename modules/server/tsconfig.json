{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "types": [
      "node",
      "@wdio/globals/types",
    ],
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": [
    "src/main/ts",
    "src/test/ts",
    "src/typings/ts"
  ]
}
