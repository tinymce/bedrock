    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "types": [ "jquery" ]
  },
  "include": [
    "src/main/ts",
    "src/test/ts"
  ]
}
