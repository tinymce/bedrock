{
  "name": "@ephox/bedrock",
  "description": "NodeJS test runner",
  "repository": {
    "type": "git",
    "url": "https://github.com/ephox/bedrock"
  },
  "scripts": {
    "bedrock": "node modules/server/bin/bedrock.js",
    "bedrock-auto": "node modules/server/bin/bedrock-auto.js",
    "lint": "bun eslint 'modules/common/src/**/*.ts' 'modules/client/src/**/*.ts' 'modules/runner/src/**/*.ts' 'modules/server/src/**/*.ts' 'modules/server/tasks/**/*.js'",
    "prepublishOnly": "bun run build",
    "postinstall": "patch-package",
    "clean": "git clean -dfx lib dist modules node_modules",
    "build-common": "cd modules/common && bun run build",
    "build-client": "cd modules/client && bun run build",
    "build-runner": "cd modules/runner && bun run build",
    "build-server": "cd modules/server && bun run build",
    "build": "bun run build-common && bun run build-client && bun run build-runner && bun run build-server",
    "test-common": "cd modules/common && bun test",
    "test-client": "cd modules/client && bun test",
    "test-runner": "cd modules/runner && bun test",
    "test-server": "cd modules/server && bun test",
    "test-sample": "cd modules/sample && bun test",
    "test-samples-fail": "cd modules/sample && bun run test-samples-fail",
    "test": "bun run build && bun run lint && bun run test-common && bun run test-client && bun run test-runner && bun run test-server"
  },
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "20.1.4",
    "@types/request": "^2.48.4",
    "@types/which": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "chai": "^4.2.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "esm": "^3.2.25",
    "fast-check": "^1.18.1",
    "fast-deep-equal": "^3.1.3",
    "grunt": "^1.0.4",
    "lerna": "^3.18.3",
    "load-grunt-tasks": "^5.1.0",
    "mocha": "^8.2.0",
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Tiny Technologies Inc",
  "license": "Apache-2.0",
  "files": [],
  "dependencies": {
    "chokidar": "^4.0.3"
  }
}
